<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Signup">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="ID " />

        <EditText
            android:id="@+id/sign_up_page_id"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:hint="ID를 입력하세요"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Email " />

        <EditText
            android:id="@+id/sign_up_page_email"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:hint="Email을 입력하세요"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="PW " />

        <EditText
            android:id="@+id/sign_up_page_pw"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:hint="PassWord를 입력하세요"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="PW 확인" />

        <EditText
            android:id="@+id/sign_up_page_pw_check"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:hint="PassWord를 입력하세요"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Card 종류" />

        <EditText
            android:id="@+id/sign_up_page_card_type"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:hint="Card 종류를 입력하세요"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Card 번호" />

        <EditText
            android:id="@+id/sign_up_page_card_number"
            android:layout_width="280dp"
            android:textSize="25dp"
            android:hint="Card번호를 입력하세요"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_page_sign_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp"
        android:text="회원가입"/>

</LinearLayout>